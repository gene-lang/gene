{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Gene",
  "scopeName": "source.gene",
  "patterns": [
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#symbols" },
    { "include": "#function-definition" },
    { "include": "#class-definition" },
    { "include": "#special-forms" },
    { "include": "#method-calls" },
    { "include": "#property-access" },
    { "include": "#brackets" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.gene",
          "begin": "#<",
          "end": ">#"
        },
        {
          "name": "comment.line.number-sign.gene",
          "match": "#(?![\"<]).*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.interpolated.gene",
          "begin": "#\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.gene",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.interpolation.gene",
              "begin": "#\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.gene" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.gene" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "meta.embedded.interpolation.gene",
              "begin": "#\\(",
              "end": "\\)",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.gene" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.gene" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "meta.embedded.interpolation.gene",
              "begin": "#\\[",
              "end": "\\]",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.gene" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.gene" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.triple.gene",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.gene",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.interpolated.gene",
          "begin": "#\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gene",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.interpolation.gene",
              "begin": "#\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.gene" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.gene" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "meta.embedded.interpolation.gene",
              "begin": "#\\(",
              "end": "\\)",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.gene" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.gene" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "meta.embedded.interpolation.gene",
              "begin": "#\\[",
              "end": "\\]",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.gene" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.gene" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.double.gene",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gene",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.gene",
          "match": "-?\\d+\\.\\d+([eE][+-]?\\d+)?"
        },
        {
          "name": "constant.numeric.integer.gene",
          "match": "-?\\d+"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.gene",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.nil.gene",
          "match": "\\b(nil|NIL)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.gene",
          "match": "\\b(if|else|elif|then|loop|for|while|break|continue|return|try|catch|throw|match|case|when)\\b"
        },
        {
          "name": "keyword.other.gene",
          "match": "\\b(var|let|const|fn|class|new|import|export|module|ns|namespace|async|await|do|quote|in)\\b"
        },
        {
          "name": "keyword.operator.gene",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.gene",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.gene",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.gene",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.gene",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.spread.gene",
          "match": "\\.\\.\\."
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "constant.other.keyword.gene",
          "match": ":[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "constant.other.symbol.gene",
          "match": "\\^[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.language.special.gene",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "match": "\\((fn)\\s+([a-zA-Z_][a-zA-Z0-9_!?]*)",
          "captures": {
            "1": { "name": "keyword.other.gene" },
            "2": { "name": "entity.name.function.gene" }
          }
        }
      ]
    },
    "class-definition": {
      "patterns": [
        {
          "match": "\\((class)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.gene" },
            "2": { "name": "entity.name.class.gene" }
          }
        }
      ]
    },
    "special-forms": {
      "patterns": [
        {
          "name": "support.function.builtin.gene",
          "match": "\\b(print|println|sqrt|abs|min|max|len|type|str|int|float|bool)\\b"
        },
        {
          "name": "entity.name.function.method.gene",
          "match": "\\.(ctor!?|fn!?|[a-zA-Z_][a-zA-Z0-9_!?]*)"
        }
      ]
    },
    "method-calls": {
      "patterns": [
        {
          "name": "entity.name.function.method-call.gene",
          "match": "(?<=\\s)\\.[a-zA-Z_][a-zA-Z0-9_!?]*"
        }
      ]
    },
    "property-access": {
      "patterns": [
        {
          "name": "variable.other.property.gene",
          "match": "/[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "brackets": {
      "patterns": [
        {
          "name": "punctuation.section.parens.gene",
          "match": "[()]"
        },
        {
          "name": "punctuation.section.brackets.gene",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.braces.gene",
          "match": "[{}]"
        }
      ]
    }
  }
}
