{
  "name": "gene-language-support",
  "displayName": "Gene Language Support",
  "description": "Language support for Gene programming language",
  "version": "0.1.0",
  "publisher": "gene-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/gene-lang/gene"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "gene",
    "lisp",
    "functional",
    "programming"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gene",
        "aliases": [
          "Gene",
          "gene"
        ],
        "extensions": [
          ".gene"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gene",
        "scopeName": "source.gene",
        "path": "./syntaxes/gene.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "gene.restartServer",
        "title": "Gene: Restart Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gene",
      "properties": {
        "gene.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Gene Language Server"
        },
        "gene.lsp.trace": {
          "type": "boolean",
          "default": false,
          "description": "Enable LSP tracing for debugging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.x",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "activationEvents": []
}
