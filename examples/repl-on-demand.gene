#!/usr/bin/env gene run

# ($repl) to open a repl at the current location
# if some global option is set, open repl on exception

(var a 1)
(var b 2)
(println "Check a and b in the REPL.")
(println "Change a in the REPL.")
(println "And `c` will have the last value from REPL.")
(var c ($repl))
(println)
(println "a =" a)
(println "b =" b)
(println "c =" c)
